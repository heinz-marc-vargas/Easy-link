<% unless @product.errors.empty?%>
  html = '<div class="alert alert-error">';
  html += "<a class='close' data-dismiss='alert'>Ã—</a>";
  <% @product.errors.values.each do |msg| %>
  	html += "<%= msg.first %> <br/>";
  <% end %>
  html += '</div>';
  $("#product-errors").empty();
  $("#product-errors").append(html);  
<% else %>
  OC.clearForms();
	$.sticky("Product successfully created.", {autoclose : 5000, position: "top-right", type: "st-success" });
	OC.getProducts();
<% end%>
